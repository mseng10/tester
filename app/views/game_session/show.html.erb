<div style="position: fixed; left: 50%; bottom: 30px; transform: translate(-50%, -50%); margin: 0 auto;", id = "testing_div">
<table class="user_hand_cards" id="user_hand_cards">
  <tbody>
    <% @user_hand_card_values.each do |card| %>
      <td>
        <div style="height: 110px;" class = "user_card">
          <%= raw(card) %>
        </div>
      </td>
    <% end %>
  </tbody>
</table>
</div>

<div class = "game_buttons">
  <%= button_to  'End Game', game_session_path, method: :delete, :class => 'btn btn-danger', :id => "end_game_button"%>
</div>


<h4 id="end game">
<script type="text/javascript">
    (function end_game() {
            $.ajax({
                url: '/game_session/'+ <%= request.original_url.split(//).last(4).join.to_i %>,
                type: 'GET',
                complete: function() {
                    setTimeout(end_game, 5000);
                }
            });
    })();

</script>
</h4>



